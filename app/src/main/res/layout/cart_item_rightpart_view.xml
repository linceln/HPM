<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_right"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/cart_spacing_half">



    <LinearLayout
        android:id="@+id/layout_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cart_spacing_half"
        android:gravity="center"
        android:minWidth="@dimen/cart_layout_price_minWidth"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/cart_price_1"
            android:textSize="@dimen/cart_tv_size_normal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_originalprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/cart_main_text_color"
            android:textSize="@dimen/cart_tv_size_normal"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>