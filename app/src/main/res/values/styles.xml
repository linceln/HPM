<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppThemeDarkStatusBar" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--<style name="AnimationActivitySetting" parent="@style/AppTheme">-->
    <!--<item name="android:windowAnimationStyle">@style/AnimationActivity</item>-->
    <!--</style>-->

    <!--<style name="AnimationActivity" parent="@android:style/Animation.Activity">-->
    <!--<item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>-->
    <!--<item name="android:activityOpenExitAnimation">@anim/push_left_out</item>-->
    <!--<item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>-->
    <!--<item name="android:activityCloseExitAnimation">@anim/push_right_out</item>-->
    <!--</style>-->

    <style name="IPickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/color_primary_dark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DividerHorizontal">
        <item name="android:background">@color/divider_line_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/size_1px</item>
    </style>

    <style name="DividerVertical">
        <item name="android:background">@color/divider_line_color</item>
        <item name="android:layout_width">@dimen/size_1px</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="big_redbtn_style">
        <item name="android:textSize">@dimen/order_tv_size_big_1</item>
        <item name="android:textColor">@color/trans_red</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/pay_btn_big_default</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">@dimen/big_redbtn_width</item>
        <item name="android:layout_height">@dimen/large_redbtn_height</item>
    </style>

    <!-- pay Navigation Header -->
    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">@color/navpage</item>
    </style>

    <style name="Theme.Light.NoTitle.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="Theme.Light.NoTitle.NoShadow.Dialog" parent="Theme.Light.NoTitle.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Animation.Bottom.Rising" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>


    <style name="Widget.Sherlock.ProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/abs__progress_medium_holo</item>
        <item name="android:animationResolution">33</item>
    </style>

    <style name="ProgressBar" parent="@style/Widget.Sherlock.ProgressBar">
        <!--        <item name="android:background">@drawable/common_progress_backgroud</item>-->
        <item name="android:indeterminateDrawable">
            @drawable/common_progress_indeterminate_drawable
        </item>
        <item name="android:indeterminateDuration">1000</item>
    </style>

    <style name="ProgressBarSmall" parent="@style/ProgressBar">
        <item name="android:maxWidth">30.0dip</item>
        <item name="android:maxHeight">30.0dip</item>
        <item name="android:indeterminateDrawable">
            @drawable/common_progress_indeterminate_drawable_small
        </item>
        <item name="android:minWidth">30.0dip</item>
        <item name="android:minHeight">30.0dip</item>
    </style>


    <style name="TheStoreWigdet.SherlockStyled.NoActionBar.Dialog" parent="@style/AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        <item name="android:progressBarStyleSmall">@style/ProgressBarSmall</item>
        <item name="android:textViewStyle">@style/TextView</item>
    </style>

    <style name="TextView">
        <item name="android:textSize">@dimen/default_textView_text_size</item>
        <item name="android:textColor">@color/sub_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
