<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0.0"
    android:pivotX="50.0%"
    android:pivotY="50.0%"
    android:toDegrees="360.0">
    <shape
        android:innerRadiusRatio="2.5"
        android:shape="ring"
        android:thickness="3.0px"
        android:useLevel="false">
        <gradient
            android:centerColor="#ffe13228"
            android:centerY="0.5"
            android:endColor="#ffe13228"
            android:startColor="#0ae13228"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>